{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",  // CommonJS for Node.js
    "strict": true,        // Enable strict type-checking
    "esModuleInterop": true, // Enable importing CommonJS modules
    "skipLibCheck": true,   // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",    // Output compiled JS to the "dist" directory
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": ["src/**/*.ts"],  // Include TypeScript files in the "src" directory
  "exclude": ["node_modules"]  // Exclude node_modules directory
}
